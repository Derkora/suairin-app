<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define a gradient background with colors for the progress arc -->
    <gradient
        android:angle="90"
        android:startColor="#FFA726"
        android:endColor="#FF7043"
        android:type="linear" />

    <!-- Add optional stroke or border for styling -->
    <stroke
        android:width="4dp"
        android:color="#FF5722" />

    <!-- Optional corner radius for rounded edges (if needed) -->
    <corners android:radius="8dp" />
</shape>
