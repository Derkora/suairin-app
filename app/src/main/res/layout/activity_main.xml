<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Profile Icon -->
    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_purple_circle"
        android:backgroundTint="@null"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Icon -->
    <ImageButton
        android:id="@+id/settingsIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- dB Reading Text -->
    <TextView
        android:id="@+id/dbLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dB: 0.00"
        android:textSize="64sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp" />

    <!-- History Title -->
    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/white"
        android:src="@drawable/ic_history"
        app:layout_constraintTop_toBottomOf="@id/dbLevelTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <!-- Timer TextView -->
        <Chronometer
            android:id="@+id/recordingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"/>

        <!-- Button Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Cancel Button -->
            <ImageButton
                android:id="@+id/stopButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:backgroundTint="@null"
                android:src="@drawable/ic_cancel" />

            <!-- Mic Button -->
            <ImageButton
                android:id="@+id/recordButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_white2_circle"
                android:src="@drawable/ic_mic_default"
                android:layout_margin="30dp" />

            <!-- Done Button -->
            <ImageButton
                android:id="@+id/doneButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:backgroundTint="@null"
                android:src="@drawable/ic_done" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
